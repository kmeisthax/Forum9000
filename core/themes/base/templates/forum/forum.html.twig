{% extends "base.html.twig" %}
{% import "macros.html.twig" as macros %}

{% block body %}
    {% if forum %}
        {{macros.render_forum_header(forum)}}
        {{macros.breadcrumb(forum)}}
    {% endif %}

    {% for child in children %}
        {% if child is instanceof('\\Forum9000\\Entity\\Forum') %}
            {{macros.render_forum_overview(child)}}
        {% else %}
            {{macros.render_thread_overview(child)}}
        {% endif %}
    {% endfor %}

    {{macros.pagination(children_count, 10, "f9kforum_forum", {"id": forum.slug}, page)}}
{% endblock %}
