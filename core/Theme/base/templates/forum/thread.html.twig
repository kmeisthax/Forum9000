{% extends "base.html.twig" %}

{% block body %}
    <a href="{{url('f9kforum_forum', {'id':forum.compactId})}}">Back to {{forum.title}}</a>
    {% for post in posts %}
        <article id="p{{post.order}}">
            <h2>{{post.title}}</h2>
            {% if post.postedBy %}
                <p>Posted by {{post.postedBy.handle}} on {{post.ctime | date}} UTC</p>
            {% else %}
                <p>Posted anonymously on {{post.ctime | date}} UTC</p>
            {% endif %}
            {{post.message}}
        </article>
    {% else %}
        No posts!
    {% endfor %}

    <h2>Reply</h2>
    {{ form_start(reply_form) }}
    {{ form_widget(reply_form) }}
    {{ form_end(reply_form) }}
{% endblock %}
