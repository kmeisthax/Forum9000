{% extends "base.html.twig" %}

{% block body %}
    <h1>Forum Manifest</h1>

    {% for forum in forums %}
        <article>
            <a href="{{url('f9kadmin_forum_single', {'id':forum.compactId})}}">{{forum.title}}</a>
        </article>
    {% else %}
        No forums!
    {% endfor %}

    <h2>New Forum</h2>
    {{ form_start(forum_form) }}
    {{ form_widget(forum_form) }}
    {{ form_end(forum_form) }}
{% endblock %}
